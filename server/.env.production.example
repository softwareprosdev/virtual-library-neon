# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# Core Configuration
NODE_ENV=production
PORT=4000
CLIENT_URL=https://yourdomain.com

# Database (Required)
DATABASE_URL=postgresql://username:password@host:port/database

# Redis (Required)
REDIS_URL=redis://host:port

# JWT Configuration (Required)
JWT_SECRET=your-super-secure-random-secret-string-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Service (Required for email verification)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Email Validation Services (Optional but Recommended)
HUNTER_API_KEY=your_hunter_api_key_here
ABSTRACT_API_KEY=your_abstract_api_key_here

# LiveKit Video/Audio (Required for video features)
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
NEXT_PUBLIC_LIVEKIT_URL=wss://your-livekit-server.com

# AWS S3 File Storage (Required for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# Admin Setup (Optional)
RUN_ADMIN_SETUP=false

# Security Headers (Optional)
TRUST_PROXY=1