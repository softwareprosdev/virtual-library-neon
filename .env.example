# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://postgres:YOUR_SECURE_PASSWORD@postgres:5432/vlib"
POSTGRES_DB="vlib"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="YOUR_SECURE_PASSWORD"

# ===========================================
# REDIS
# ===========================================
REDIS_URL="redis://redis:6379"

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET="YOUR_256_BIT_SECRET_KEY_MIN_32_CHARS"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ===========================================
# APPLICATION URLS
# ===========================================
# Client URL (for CORS and redirects)
CLIENT_URL="https://indexbin.com"

# API URLs (for client to connect to backend)
NEXT_PUBLIC_API_URL="https://api.indexbin.com/api"
NEXT_PUBLIC_SOCKET_URL="https://api.indexbin.com"

# ===========================================
# LIVEKIT (WebRTC)
# ===========================================
LIVEKIT_API_KEY="YOUR_LIVEKIT_API_KEY"
LIVEKIT_API_SECRET="YOUR_LIVEKIT_API_SECRET"
LIVEKIT_URL="wss://YOUR_LIVEKIT_URL"
NEXT_PUBLIC_LIVEKIT_URL="wss://YOUR_LIVEKIT_URL"

# ===========================================
# AWS S3 (Optional - for file storage)
# ===========================================
AWS_ACCESS_KEY_ID="YOUR_ACCESS_KEY"
AWS_SECRET_ACCESS_KEY="YOUR_SECRET_KEY"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-bucket-name"

# ===========================================
# RESEND (Optional - for email)
# ===========================================
RESEND_API_KEY="YOUR_RESEND_API_KEY"

# ===========================================
# SERVER
# ===========================================
PORT=4000
NODE_ENV="production"
